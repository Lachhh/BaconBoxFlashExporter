<?xml version="1.0"?>

<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:BB="BaconBox.*" width="800" height="600" >
	<fx:Style source="./themes/spark_graphite/spark_graphite.css"/>
	<s:VGroup width="100%" height="100%"  paddingLeft="10" paddingRight="10" paddingTop="10" paddingBottom="10">
		<s:HGroup>
			<s:Button label="Load SWF/JSON"></s:Button>
		</s:HGroup>
		<s:HGroup width="100%" height="100%">
			<s:VGroup width="100%" height="100%">
				<s:VGroup width="100%" height="100%">
					<s:Label text="Texture atlas"></s:Label>
					<s:List width="100%" height="100%"></s:List>
				</s:VGroup>
				<s:VGroup>
					<s:HGroup width="100%">
						<s:Label text="Texture name"></s:Label>
						<s:TextInput width="100%"></s:TextInput>
					</s:HGroup>

				<s:HGroup>
					<s:Label text="Scale"></s:Label>
					<s:TextInput widthInChars="4"></s:TextInput>
					<s:Label text="Width"></s:Label>
					<s:TextInput widthInChars="4"></s:TextInput>
					<s:Label text="Height"></s:Label>
					<s:TextInput widthInChars="4"></s:TextInput>
				</s:HGroup>
				</s:VGroup>
				<s:VGroup width="100%" height="100%">
					<s:Label text="Preview"></s:Label>
					<s:HGroup width="100%" height="100%">
					<s:VGroup>
					<s:Button label=">"></s:Button>
					<s:Button label="x"></s:Button>
					</s:VGroup>
					<BB:SymbolPreviewer></BB:SymbolPreviewer>
					<!--<s:List></s:List>-->
					</s:HGroup>
				</s:VGroup>
			</s:VGroup>
			<BB:VSwappingList width="100%" height="100%"></BB:VSwappingList>
		</s:HGroup>
	</s:VGroup>
</s:WindowedApplication>
